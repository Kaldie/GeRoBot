<ROBOTBUILDER>
  <ROBOT name="testBot">
    <JOINTCONTROLLER>
      <ACTUATOR>
	<TYPE>Arduino</TYPE>
	<REGULAR_EXPRESSION>/dev/ttyUSB*</REGULAR_EXPRESSION>
      </ACTUATOR>

      <JOINT name="RotationalJoint" type="StepperDriver">
	<CHILD>TranslationalJoint</CHILD>
	<MOVEMENT_PER_STEP>0.001654411764706</MOVEMENT_PER_STEP>
	<MOVEMENT_TYPE>ROTATIONAL</MOVEMENT_TYPE>
	<DEFAULT_POSITION>90.0</DEFAULT_POSITION>

	<RANGE>
	  <VALUE>-720</VALUE>
	  <VALUE>720</VALUE>
	</RANGE>

	<DIRECTION_CONVERSION_MAP>
	  <VALUE>CCW,CCW</VALUE>
	  <VALUE>CW,CW</VALUE>
	</DIRECTION_CONVERSION_MAP>

	<ACTUATOR>
	  <ACTUATOR_TYPE>STEPPERDRIVER</ACTUATOR_TYPE>
	  <PINS>
	    <VALUE>5</VALUE>
	    <VALUE>6</VALUE>
	    <VALUE>7</VALUE>
	  </PINS>
	  <DEFAULT_DIRECTION>CCW</DEFAULT_DIRECTION>
	  <HOLD_MOTOR>true</HOLD_MOTOR>
	  <MAX_SPEED>1000</MAX_SPEED>
          <PULL_IN>300</PULL_IN>
          <PULL_OUT>300</PULL_OUT>
	</ACTUATOR>
      </JOINT>

      <JOINT name="TranslationalJoint" type="StepperDriver">
	<CHILD>null</CHILD>
        <MOVEMENT_PER_STEP>0.01</MOVEMENT_PER_STEP>
	<MOVEMENT_TYPE>TRANSLATIONAL</MOVEMENT_TYPE>
	<DEFAULT_POSITION>50.0</DEFAULT_POSITION>

	<RANGE>
	  <VALUE>50</VALUE>
	  <VALUE>1000</VALUE>
	</RANGE>

	<DIRECTION_CONVERSION_MAP>
	  <VALUE>IN,CCW</VALUE>
	  <VALUE>OUT,CW</VALUE>
	</DIRECTION_CONVERSION_MAP>

	<ACTUATOR>
	  <ACTUATOR_TYPE>STEPPERDRIVER</ACTUATOR_TYPE>
	  <PINS>
	    <VALUE>2</VALUE>
	    <VALUE>3</VALUE>
	    <VALUE>4</VALUE>
	  </PINS>
	  <DEFAULT_DIRECTION>CCW</DEFAULT_DIRECTION>
	  <HOLD_MOTOR>true</HOLD_MOTOR>
	  <MAX_SPEED>1000</MAX_SPEED>
          <PULL_IN>300</PULL_IN>
          <PULL_OUT>300</PULL_OUT>
	</ACTUATOR>

	<ENDSTOP>
	  <POSITION>50</POSITION>
	  <PINNUMBER>1</PINNUMBER>
	  <ACTIVATIONSTATE>false</ACTIVATIONSTATE>
	  <ACTIVATIONDIRECTION>IN</ACTIVATIONDIRECTION>
	</ENDSTOP>
	<ENDSTOP>
	  <POSITION>250</POSITION>
	  <PINNUMBER>1</PINNUMBER>
	  <ACTIVATIONSTATE>false</ACTIVATIONSTATE>
	  <ACTIVATIONDIRECTION>OUT</ACTIVATIONDIRECTION>
	</ENDSTOP>
      </JOINT>
    </JOINTCONTROLLER>

    <SPEEDCONTROLLER>
      <TYPE>Relative</TYPE>
      <SPEED>99</SPEED>
    </SPEEDCONTROLLER>  
  </ROBOT>
</ROBOTBUILDER>


